<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopOnTheGo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/whitey</item>
        <item name="colorOnPrimary">@color/dark</item>

        <item name="background_color">@color/whitey</item>
        <item name="text_color">@color/main_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/whitey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/main_color</item>
    </style>

    <style name="Theme.ShopOnTheGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ShopOnTheGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShopOnTheGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>